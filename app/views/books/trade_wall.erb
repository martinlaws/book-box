<div class="row">
  <h1 class="header-box">
    <center>Here's what's available near you:</center>
  </h1>
</div>

<div class="container">
  <div class="flex-container">

  <% @books.each do |book| %>
    <% if book.not_owned_by_current_user?(current_user) %>
      <div class="four columns book-tile">
        <h4><%= book.title %></h4>
        <p>by: <%= book.author %></p>
        </br>
        <p><%= book.genre %></p>
        <p><%= book.user.first_name %></p>
        <p><%= User.find(book.user_id).location %></p>

        <form method="post" action="/trade/new<%= book.id %>">
          <input class="button" type="submit" value="Trade">
        </form>
      </div>
    <% end %>
  <% end %>

  </div>
</div>
