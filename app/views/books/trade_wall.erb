<div class="row">
  <h1 class="header-box">
    <center>Here's what's available near you:</center>
  </h1>
</div>

<div class="container">
  <div class="flex-container">

  <% @books.each do |book| %>
    <div class="four columns book-tile">
      <h4><%= book.title %></h4>
      <p>by: <%= book.author %></p>
      </br>
      <p><%= book.genre %></p>
      <!-- <p><%= User.find(book.user_id).location %></p> -->
      <p><%= book.user.first_name %><%= book.user.location %></p>
      <p>LOCATION</p>
    </div>
  <% end %>

  </div>
</div>

</br>
<center><a class="button" href="/book/new">Post a new book</a></center>
