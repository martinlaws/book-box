<div class="container" style="clear: both;">
  <div class="six columns book-tile">
    <h4>Title: <%= @book.title %></h4>
    <p>Author: <%= @book.author %></p>
    </br>
    <p>Genre: <%= @book.genre %></p>
    <p>Poster: <%= @book.user.first_name %></p>
    <p>You can find <%= @book.user.first_name %> in: <%= @book.user.location.address %></p>
    </br>
  </div>
</div>

<div class="container">
</br>
  <div class="row">
    <h5 class="docs-header">
      <center>Trade History for <%= @book.title %></center>
    </h5>
    <table class="u-full-width">
      <thead>
        <tr>
          <th>Location</th>
          <th>Trade Date</th>
          <th>Poster</th>
          <th>Receiver</th>
        </tr>
      </thead>
      <tbody>
        <% @book.trades.each do |trade| %>
          <% posting_user = User.find(trade.posting_user) %>
          <% receiving_user = User.find(trade.receiving_user) %>
          <td><%= posting_user.location.address %>
          <td><%= trade.created_at.httpdate %></td>
          <td><%= posting_user.first_name %> <%= posting_user.last_name %></td>
          <td><%= receiving_user.first_name %> <%= receiving_user.last_name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
