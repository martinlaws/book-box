<div class="container">
<%= @flash %>
  <div class="row">
    <h1 class="header-box">
      <center>Sign up! You're going to
        <strong>love</strong>
        this.</center>
    </h1>
  </div>
  <form action="/signup" method="POST">
    <div class="row">
      <div class="six columns">
        <input class="u-full-width" name="first_name" placeholder="First Name" type="text">
      </div>
      <div class="six columns">
        <input class="u-full-width" name="last_name" placeholder="Last Name" type="text">
      </div>
    </div>
    <div class="row">
      <div class="six columns">
        <input class="u-full-width" name="email" placeholder="email@email.com" type="email">
      </div>
      <div class="six columns">
        <input class="u-full-width" name="password" placeholder="password" type="password">
      </div>
    </div>
    <div class="row">
      <div class="five columns">
        <input class="u-full-width latitude" name="location" placeholder="Latitude" type="text">
      </div>
      <div class="five columns">
        <input class="u-full-width longitude" name="location" placeholder="Longitude" type="text">
      </div>
      <button class="getLocation" type="button">Get Location</botton>
    </div>
    <center><input class="button-primary" type="submit" value="submit"></center>
  </form>
</div>
