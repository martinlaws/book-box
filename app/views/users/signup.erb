<div class="container">
  <form method="POST" action="/signup">
    <div class="row">
      <div class="six columns">
        <label for="first_name">First Name</label>
        <input name="first_name" class="u-full-width" placeholder="Anne" type="text" value="">
      </div>
      <div class="six columns">
        <label for="last_name">Last Name</label>
        <input name="last_name" class="u-full-width" placeholder="Hathaway" type="text" value="">
      </div>
    </div>
    <div class="row">
      <div class="six columns">
        <label for="email">Email</label>
        <input name="email" class="u-full-width" placeholder="thedevilwearsparada@hotmail.com" type="email" value="">
      </div>
      <div class="six columns">
        <label for="password">Password</label>
        <input class="u-full-width" placeholder="password" type="password" name="password" value="">
      </div>
    </div>
    <input class="button-primary" type="submit" value="submit input">
  </form>
</div>
